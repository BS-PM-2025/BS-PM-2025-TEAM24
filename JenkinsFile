pipeline {
    agent none

    stages {
        stage('Install Dependencies') {
            agent {
                docker {
                    image 'node:18-alpine'
                    args  '-u root:root'     // run as root so npm ci can write to node_modules
                }
            }
            steps {
                // do a clean, reproducible install
                sh 'npm ci'
            }
        }

        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    args  '-u root:root'
                }
            }
            steps {
                // if you have a build step (e.g. webpack, tsc), otherwise omit
                sh 'npm run build'
            }
        }

        stage('Test') {
            agent {
                docker {
                    image 'node:18-alpine'
                    args  '-u root:root'
                }
            }
            steps {
                // make sure youâ€™ve added a JUnit reporter (e.g. jest-junit) in your test config
                sh 'npm test -- --ci --reporters=default --reporters=jest-junit'
            }
            post {
                always {
                    // tells Jenkins where to find the XML results
                    junit 'test-results/junit.xml'
                }
            }
        }
    }
}
